{
  "manifest_version": 3,
  "name": "YouTube Shorts Blocker",
  "version": "1.0",
  "description": "Bloquea los Shorts de YouTube para una mejor experiencia de navegaci√≥n",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
	"48": "assets/images/shorts-blocker-logo-48px.png",
    "128": "assets/images/shorts-blocker-logo-128px.png"
  }
} 